<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/totalView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainbackground">
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >
  <EditText
    android:id="@+id/scoresLabel"
    android:layout_width="70dp"
    android:layout_height="37dp"
    android:layout_alignParentLeft="true"
    android:textSize="7pt"
    android:hint="@string/Score"
     android:gravity="center"
    android:focusable="false"
     android:enabled="false"
     android:background="@color/anstxt3"
    />

    <TextView
        android:id="@+id/scoreField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/scoresLabel"
        android:layout_alignBaseline="@+id/scoresLabel"
        android:layout_marginRight="44dip"
        android:hint="@string/reminder3"
        android:textColor="#000000"
        
        android:textSize="7pt" />
    <View
          android:id="@+id/emptyView1"
          android:layout_width="fill_parent"
           android:layout_marginTop="14dip"
        android:layout_height="2dip"
        android:layout_alignLeft="@+id/scoresLabel"
         android:layout_below="@+id/scoreField"
        android:background="#8B5742" />
    <TextView
        android:id="@+id/getquestionString"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emptyView1"
        android:layout_below="@+id/emptyView1"
        android:layout_margin="4dip"
        android:layout_marginTop="55dp"
   
        android:gravity="center"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="9pt"
         />
  <View
          android:id="@+id/emptyView2"
          android:layout_width="fill_parent"
        android:layout_height="2dip"
         android:layout_marginTop="7dp"
        android:layout_alignLeft="@+id/getquestionString"
         android:layout_below="@+id/getquestionString"
        android:background="#8B5742" />
 
    <TextView
        android:id="@+id/getAnswerString"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emptyView2"
        android:layout_centerInParent="true"
        android:layout_margin="4dip"
        android:layout_marginBottom="59dp"
       android:layout_marginTop="5dp"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="9pt" 
       />
    
  <View
          android:id="@+id/emptyView3"
          android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignLeft="@+id/getAnswerString"
         android:layout_below="@+id/getAnswerString"
        android:background="#8B5742" />  



  <Button
      android:id="@+id/next"
       android:color="@color/anstxt3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
      android:layout_marginBottom="2dp"
     android:bottomOffset="18dp"
      android:layout_alignParentRight="true"
      
      android:layout_marginTop="161dp"
 android:background="@drawable/rounded_buttonstates"
      android:capitalize="characters"
      android:includeFontPadding="true"
      android:text="@string/next"
      android:textAllCaps="true"
      android:textColor="#000000"
      android:textSize="16pt"
       android:layout_gravity="center"
       android:gravity="center_horizontal" />

 <Button
     android:id="@+id/prev"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     
     android:layout_alignParentBottom="true"
     android:layout_alignLeft="@+id/emptyView3"
     android:background="@drawable/rounded_buttonstates"
     android:gravity="center_horizontal"
     android:text="@string/next"
     android:textAllCaps="true"
     android:textColor="#000000"
     android:textSize="16pt"
     android:color="@color/anstxt3" />
 <SlidingDrawer
    android:id="@+id/slidingDrawer" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:content="@android:id/list"
    android:handle="@+id/slideHandleButton"
    android:layout_below="@+id/getquestionString"
     android:orientation="horizontal"
     android:bottomOffset="10dp"
   android:clipChildren="false"
    android:padding="1dp"
   
  >
  
    <ImageButton
           android:id="@+id/slideHandleButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
        
            android:src="@drawable/btn_check_on2" 
        android:duplicateParentState="false"
            android:textColor="#4F2F4F"
          
             />


      <ListView
          android:id="@android:id/list"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"        
          android:divider="#8B5742"
          android:dividerHeight="4.5sp"
          android:drawSelectorOnTop="false"
          android:footerDividersEnabled="true"
          android:headerDividersEnabled="true"
    android:background="@drawable/mainbackground"/>

</SlidingDrawer>    
 
</RelativeLayout>
 

