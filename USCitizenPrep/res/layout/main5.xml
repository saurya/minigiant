<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/totalView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/anstxt3"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/getAnswerString"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="4dip"
        android:background="#CDB79E"
        android:scrollbars="vertical"
        android:textColor="#4F2F4F"
        android:textSize="9pt" />
 
    <TextView
        android:id="@+id/getquestionString"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/getAnswerString"
        android:layout_alignLeft="@+id/getAnswerString"
        android:layout_margin="4dip"
        android:layout_marginBottom="54dp"
        android:background="#CDB79E"
        android:gravity="center_vertical"
        android:scrollbars="vertical"
        android:textColor="#4F2F4F"
        android:textSize="9pt" />
 <View
        android:layout_height="2dip"
        android:background="#FF0000" />
</RelativeLayout>