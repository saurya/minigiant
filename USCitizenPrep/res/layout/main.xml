<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:orientation="vertical" 
  
 android:layout_centerVertical="true"
 android:layout_centerInParent="true" android:background="@color/anstxt3">
<TextView
android:gravity="center"
android:text="\nWELCOME \n to \n U.S NATURALIZATION INTERVIEW PREPARATION \n\n
 Some answers depend on your address. 
 Please click here to select your state. \n"

android:layout_margin="4dip"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
/>
<!--  style="?android:attr/spinnerItemStyle"--> 

   <Spinner
        android:id="@+id/state_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@drawable/spinner_background"
        style="@style/style1"
        >
         </Spinner>
    
         <!--    android:background="@drawable/android_focused" -->
           <RadioGroup
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <RadioButton android:id="@+id/radio_prepare_for_interview"
           android:textColor="#4F2F4F"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Prepare For The Test" />
      <RadioButton android:id="@+id/radio_test_yourself"
          android:textColor="#4F2F4F"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Take Practice Test now" />      
    </RadioGroup>

           <CheckBox
               android:id="@+id/radio_senior_prepare_for_interview"
               android:layout_width="106dp"
               android:layout_height="30dp"
               android:layout_gravity="center"
               android:text="Check here if you are a qualified Senior"
               android:textSize="8sp" 
                android:textColor="#4F2F4F"
               />

           <Button
               android:id="@+id/go"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="10dp"
               android:onClick="onButtonClicked"
               android:text="@string/Next"
               android:textColor="#4F2F4F"
               android:textSize="8pt" />

           <Button
               android:id="@+id/exit"
               android:layout_width="wrap_content"
               android:layout_height="34dp"
               android:layout_gravity="bottom|right"
             
               android:layout_marginBottom="18dp"
               android:text="Exit"
               android:textColor="#4F2F4F"
               android:textColorHighlight="#00f"
               android:textSize="5pt" />
    
  <!--   android:background="@drawable/android_button" -->
<!-- android:src="@drawable/android_button" -->

 <android.gesture.GestureOverlayView
    android:id="@+id/gestures"
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="1.0" />

</LinearLayout>
