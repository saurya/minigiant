<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:orientation="vertical" 
   
 android:layout_centerVertical="true"
 android:layout_centerInParent="true" android:background="@color/anstxt1">

<TextView
android:gravity="center"
android:text="\nWELCOME \n to \n U.S NATURALIZATION INTERVIEW PREPARATION \n\n
 Some answers depend on your address. 
 Please click here to select your state. \n"

android:layout_margin="4dip"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
/>
<!--  style="?android:attr/spinnerItemStyle"--> 

<Spinner
    android:id="@+id/state_spinner"
    style="@style/style1"
    android:layout_width="42dp"
    android:layout_height="32dp"
    android:layout_gravity="center|center_horizontal"
   android:textSize="6sp"
    android:drawSelectorOnTop="true" />

         <!--    android:background="@drawable/android_focused" -->
           <RadioGroup
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <RadioButton android:id="@+id/radio_prepare_for_interview"
          
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Prepare For The Test" />
      <RadioButton android:id="@+id/radio_test_yourself"
         
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Take Practice Test now" />
       
          
        <RadioButton android:id="@+id/radio_senior_prepare_for_interview"
           
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/seniors_prepare_for_interview" />    
    </RadioGroup>

           <CheckBox
               android:id="@+id/checkBox1"
               android:layout_width="142dp"
               android:layout_height="19dp"
               android:layout_gravity="center"
               android:text="Seniors:Take Practice Test now"
               android:textSize="8sp" />

           <Button
               android:id="@+id/go"
               android:layout_width="70dp"
               android:layout_height="34dp"
               android:onClick="onButtonClicked"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
               android:text="@string/Next"
               android:textSize="12sp" />

           <Button
               android:id="@+id/exit"
               android:layout_width="wrap_content"
               android:layout_height="34dp"
               android:layout_gravity="bottom|right"
              
               android:layout_marginBottom="18dp"
               android:text="Exit"
        
               android:textColorHighlight="#00f"
               android:textSize="8sp" />
    
  <!--   android:background="@drawable/android_button" -->
<!-- android:src="@drawable/android_button" -->

 <android.gesture.GestureOverlayView
    android:id="@+id/gestures"
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="1.0" />

</LinearLayout>
