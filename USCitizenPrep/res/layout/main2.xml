<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/totalView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/anstxt3"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" 
    android:textSize="9pt"
    >

    <EditText
    android:id="@+id/scoresLabel"
    android:layout_width="70dp"
    android:layout_height="37dp"
    android:layout_alignParentLeft="true"
    android:textSize="7pt"
    android:hint="@string/Score"
     android:gravity="center"
    android:focusable="false"
     android:enabled="false"
     android:background="@color/anstxt3"
    />

    <TextView
        android:id="@+id/scoreField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/scoresLabel"
        android:layout_alignBaseline="@+id/scoresLabel"
        android:layout_marginRight="44dip"
        android:hint="@string/reminder1"
        android:textColor="#000000"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/timerTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/scoresLabel"
        android:gravity="center"
        android:hint="@string/reminder2"
        android:textColor="#000000"
        android:textSize="7pt" />
 <EditText
    android:id="@+id/timerLabel"
    android:layout_width="70dp"
    android:layout_height="37dp"
     android:layout_marginLeft="20dip"
     android:layout_toRightOf="@+id/scoreField"
     android:layout_alignBaseline="@+id/scoreField"
    android:textSize="7pt"
    android:hint="@string/timer"
     android:gravity="center"
    android:focusable="false"
     android:enabled="false"
     android:background="@color/anstxt3"
    />
     <View
          android:id="@+id/emptyView1"
          android:layout_width="fill_parent"
           android:layout_marginTop="14dip"
        android:layout_height="5dip"
        android:layout_alignLeft="@+id/scoresLabel"
         android:layout_below="@+id/scoreField"
        android:background="#8B5742" />
    <TextView
        android:id="@+id/getquestionString"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emptyView1"
        android:layout_below="@+id/emptyView1"
        android:layout_margin="4dip"
        android:layout_marginTop="25dp"
      
        android:gravity="center"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="9pt"
         />
  <View
          android:id="@+id/emptyView2"
          android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_alignLeft="@+id/getquestionString"
         android:layout_below="@+id/getquestionString"
        android:background="#8B5742" />
    <TextView
        android:id="@+id/getAnswerString"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getquestionString"
        android:layout_centerInParent="true"
        android:layout_margin="4dip"
        android:layout_marginBottom="59dp"
        
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="9pt" />
  <View
          android:id="@+id/emptyView3"
          android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_alignLeft="@+id/getAnswerString"
         android:layout_below="@+id/getAnswerString"
        android:background="#8B5742" />  
<ImageButton
            android:id="@+id/btn_check_on"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="17dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_check_on"
            android:onClick="newOnclick"
            android:textColor="#4F2F4F"
             />
    <ImageButton
        android:id="@+id/btn_close_normal"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_check_on"
        android:onClick="newOnclick2"
        android:layout_marginLeft="17dp"
        android:src="@drawable/btn_close_normal"
        android:textColor="#4F2F4F" />
>  

    <TextView
        android:id="@+id/getReport"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
      
        android:layout_margin="4dip"
        android:background="#FA8072"
       android:typeface="serif" 
       android:textColor="#4F2F4F"
        android:textSize="7pt" />

   
</RelativeLayout>