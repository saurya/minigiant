<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/totalView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/anstxt3"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" 
    android:textSize="9pt"
    >
<!-- 
    <android.gesture.GestureOverlayView
        android:id="@+id/gestures"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

      android:background="#8B5742"  
    </android.gesture.GestureOverlayView>
 -->
   
   
   
     <TextView
        android:id="@+id/scoreField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_margin="4dip"
        android:background="@color/anstxt3"
        android:gravity="center"
        android:hint="@string/reminder1"
        android:scrollbars="vertical"
        android:textColor="#FFFFFF"
        android:textSize="7pt" />

    
    <TextView
        android:id="@+id/timerTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="4dip"
        android:background="@color/anstxt3"
        android:gravity="center"
        android:hint="@string/reminder2"
        android:textColor="#FFFFFF"
        android:textSize="7pt" />

   

    <TextView
        android:id="@+id/getquestionString"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scoreField"
        android:layout_below="@+id/scoreField"
        android:layout_margin="4dip"
        android:layout_marginTop="25dp"
       android:background="@color/anstxt3"
       
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="9pt"
         />

    <TextView
        android:id="@+id/getAnswerString"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getquestionString"
        android:layout_centerInParent="true"
        android:layout_margin="4dip"
        android:layout_marginBottom="59dp"
        android:background="@color/anstxt3"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="9pt" />
<ImageButton
            android:id="@+id/btn_check_on"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="17dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_check_on"
            android:onClick="newOnclick"
            android:textColor="#FFFFFF"
             />
    <ImageButton
        android:id="@+id/btn_close_normal"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_check_on"
        android:onClick="newOnclick2"
        android:layout_marginLeft="17dp"
        android:src="@drawable/btn_close_normal"
        android:textColor="#FFFFFF" />


    <TextView
        android:id="@+id/getReport"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/gestures"
        android:layout_margin="4dip"
        android:background="#FA8072"
        android:gravity="center"
       android:textColor="#FFFFFF"
        android:textSize="6pt" />

   
</RelativeLayout>